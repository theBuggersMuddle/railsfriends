<div class="jumbotron">
  <h1 class="display-4">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>
  <p class="lead">
    <%= @friend.email %> |
    <%= @friend.phone %> |
    <%= @friend.twitter %>
  </p>
  <br/>
  <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-secondary" %>
  <%= link_to "Delete", @friend, method: :delete, data: { confirm: "are you sure?" }, class: "btn btn-outline-danger" %>
  <%= link_to "Back to friends", friends_path, class:"btn btn-secondary" %>
</div>

